{
  "name": "@lusilearn/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "migrate": "node-pg-migrate",
    "migrate:up": "node-pg-migrate up",
    "migrate:down": "node-pg-migrate down",
    "migrate:create": "node-pg-migrate create",
    "migrate:status": "node-pg-migrate status",
    "db:migrate": "tsx src/database/migrate.ts migrate",
    "db:status": "tsx src/database/migrate.ts status",
    "db:rollback": "tsx src/database/migrate.ts rollback",
    "db:seed": "tsx src/database/migrate.ts seed",
    "db:health": "tsx src/database/migrate.ts health"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^9.1.0",
    "@lusilearn/config": "*",
    "@lusilearn/shared-types": "*",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "googleapis": "^154.1.0",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.11.3",
    "redis": "^4.6.8",
    "winston": "^3.10.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.4",
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/elasticsearch": "^5.0.43",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.19.9",
    "@types/node-pg-migrate": "^2.3.1",
    "@types/pg": "^8.10.3",
    "@types/supertest": "^2.0.14",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsx": "^3.13.0",
    "typescript": "^5.2.2"
  }
}
