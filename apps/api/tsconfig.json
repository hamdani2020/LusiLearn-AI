{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "../../",
    "paths": {
      "@lusilearn/shared-types": ["./packages/shared-types/src"],
      "@lusilearn/ui": ["./packages/ui/src"],
      "@lusilearn/config": ["./packages/config/src"],
      "@/*": ["./apps/api/src/*"]
    },
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "../../packages/*/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}